mixin videoBlock3(video={})
    .videoBlock
        a(href=routes.videoDetail(video.id)).videoBlock__video
            .backColor
                if (video.youtubeLink) 
                    .for-link
                    iframe(src=video.youtubeLink, frameborder="0" )
                else
                    video.videoBlock__thumbnail(src=video.fileUrl)
        h2.videoBlock__title=video.title
        h2.videoBlock__creator by 
            //- a(href=routes.userDetail(video.creator.id))
            a(href=routes.userDetail(video.creatorId))
                span #{video.createName}
        p.videoBlock__description=video.description
        p.videoBlock__views=video.views
        